generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  emailVerified Boolean
  image         String?
  role          String   @default("user")
  banned        Boolean  @default(false)
  banReason     String?
  banExpires    Int? // Unix timestamp
  createdAt     DateTime
  updatedAt     DateTime

  sessions Session[]
  accounts Account[]
  results  Result[]

  @@map("users")
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String   @unique
  createdAt      DateTime
  updatedAt      DateTime
  impersonatedBy String?
  ipAddress      String?
  userAgent      String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("accounts")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verifications")
}

// ===============================
// CORE ACADEMIC MODELS
// ===============================

model Student {
  id          String    @id @default(cuid())
  fullName    String
  rollNumber  String    @unique
  class       String
  paper       String
  dateOfBirth DateTime?
  phoneNumber String?   @db.VarChar(15)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  centerId Int
  center   Center @relation(fields: [centerId], references: [id])

  schoolId Int
  school   School @relation(fields: [schoolId], references: [id])

  result Result? // ONE student â†’ ONE result

  @@index([fullName, rollNumber])
  @@map("students")
}

model Result {
  id              String @id @default(cuid())
  total_attempt   Int
  correct_attempt Int
  total_score     Int

  studentId String  @unique
  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  authorId String
  author   User   @relation(fields: [authorId], references: [id])

  centerId Int?
  center   Center? @relation(fields: [centerId], references: [id])

  schoolId Int?
  school   School? @relation(fields: [schoolId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("results")
}

// ===============================
// SUPPORTING MODELS
// ===============================

model Center {
  id          Int      @id @default(autoincrement())
  center_name String   @db.VarChar(50)
  center_code String   @unique @db.VarChar(12)
  address     String?
  createdAt   DateTime @default(now())

  students Student[]
  schools  School[]
  results  Result[]

  @@map("centers")
}

model School {
  id          Int      @id @default(autoincrement())
  school_name String   @db.VarChar(50)
  school_code String   @unique @db.VarChar(12)
  address     String?
  createdAt   DateTime @default(now())

  centerId Int
  center   Center @relation(fields: [centerId], references: [id])

  students Student[]
  results  Result[]

  @@map("schools")
}

model RollCounter {
  id          Int    @id @default(autoincrement())
  center_code String
  class       String
  year        String
  counter     Int    @default(0)

  @@unique([center_code, class, year], name: "center_code_class_year")
}

model ExamClass {
  id        String      @id @default(cuid())
  class     String // "5"
  papers    ExamPaper[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model ExamPaper {
  id          String     @id @default(cuid())
  year        String
  media       Media[]
  examClass   ExamClass? @relation(fields: [examClassId], references: [id], onDelete: Cascade)
  examClassId String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("exam_paper")
}

model Gallery {
  id    String  @id @default(cuid())
  title String?
  year  String
  media Media[]

  createdAt DateTime @default(now())

  @@map("gallery")
}

enum MediaType {
  PYQ
  GALLERY
}

enum FileType {
  IMAGE
  VIDEO
  PDF
}

model Media {
  id        String    @id @default(cuid())
  type      MediaType
  fileType  FileType
  url       String
  createdAt DateTime  @default(now())

  // Optional relations
  examPaperId String?
  examPaper   ExamPaper? @relation(fields: [examPaperId], references: [id], onDelete: Cascade)

  galleryId String?
  gallery   Gallery? @relation(fields: [galleryId], references: [id], onDelete: Cascade)

  @@map("media")
}
